{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@rabble/shared/*": ["packages/shared/src/*"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
